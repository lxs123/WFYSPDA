<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_user"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:text="添加容器码"
        android:textColor="#33b4e4"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33b4e4" />



    <LinearLayout
        android:id="@+id/tmsm"
        style="@style/layout1"
        android:layout_marginTop="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingRight="10dp">


        <EditText

            android:id="@+id/et_dm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="17"
            android:background="@null"
            android:ems="10"
            android:gravity="left|center_vertical"
            android:hint="容器码"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:singleLine="true"
            android:text=""
            android:textColorHint="#656565"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <!--<Button
            android:id="@+id/del1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:background="@mipmap/camera"
            android:clickable="true"
            android:gravity="center"
            android:onClick="xiangji1"
            android:textColor="@color/white" />-->

        <Button
            android:id="@+id/del1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:background="@mipmap/camera"
            android:clickable="true"
            android:gravity="center"
            android:onClick="xiangji1"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        style="@style/layout1"
        android:layout_height="50dp"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="数量"
            android:textColor="#656565"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/pick_jgry_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@null"
            android:hint=""
            android:inputType="text" />
        <!--<com.cubertech.bhpda.view.PickerView-->
        <!---->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="12"-->
        <!--android:gravity="center_vertical" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:orientation="horizontal">
        <!--<Button
            android:id="@+id/btn_xmtdy_add"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="重置"
            android:textColor="#323232"
            android:textSize="16sp" />-->

        <Button
            android:id="@+id/btn_xmtdy_add"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_marginRight="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="确定"
            android:textColor="#323232"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_xmtdy_cancel"
            style="@style/button"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="取消"
            android:textColor="#323232"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>