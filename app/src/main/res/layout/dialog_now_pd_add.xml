<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="物料编码"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_wlbm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="15"
            android:background="@drawable/editview_border"
            android:ems="10"
            android:gravity="center"
            android:hint="物料编码"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text=""
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/del1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:background="@mipmap/ic_delete"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="序        号"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_xh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:text="库        位"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_kw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="15"
            android:background="@drawable/editview_border"
            android:ems="10"
            android:gravity="center"
            android:hint="库位码"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text=""
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/del2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:background="@mipmap/ic_delete"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="储位仓库"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_ck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="批        号"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/tv_ph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:hint="请填写实盘批号"
            android:nextFocusForward="@+id/et_spsl"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout style="@style/layout1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="实盘数量"
            android:textColor="#656565"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_spsl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@null"
            android:digits="0123456789."
            android:hint="请填写实盘数量"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal" />
    </LinearLayout>
</LinearLayout>