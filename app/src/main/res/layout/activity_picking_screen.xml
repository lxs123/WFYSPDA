<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mp.theme.dark_blue.background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="工单领料-筛选"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:clickable="true"
            android:src="@drawable/fanhui" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/layout1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="工单单号"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gddh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="12"
                    android:background="@drawable/editview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="工单单号"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <RelativeLayout
                    android:id="@+id/del1d"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:background="@mipmap/ic_delete"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout style="@style/layout1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="领料人员"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_llry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="12"
                    android:background="@drawable/editview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="领料人员"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <RelativeLayout
                    android:id="@+id/del1d1"
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:background="@mipmap/ic_delete"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="工作中心"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_gzzx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center_vertical|left"
                    android:hint="请输入工作中心"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:nextFocusForward="@+id/et_xm"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="项        目"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_xm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center_vertical|left"
                    android:hint="请输入项目"
                    android:imeOptions="actionNone"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:text="预计开工日"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_yjkg_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:paddingLeft="10dp"
                    android:textSize="17sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/button"
        android:gravity="center">

        <Button
            android:id="@+id/btn_hqfld"
            style="@style/button"
            android:text="获取领料单"
            android:visibility="visible" />


        <Button
            android:id="@+id/btn_qx"
            style="@style/button"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>