<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    tools:context="com.cubertech.tkpda.Activity.StoragePackage.CgjhActivity"
    >

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mp.theme.dark_blue.background"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="采购进货"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:gravity="center"
            />

        <ImageView
            android:layout_marginLeft="1dp"
            android:src="@drawable/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_user"
        >
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:id="@+id/bb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/tmsm"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="单据日期"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_gd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请点击选择..."
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="单据明细"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null" />
                    <View
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_width="5dp"
                        android:layout_height="1dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null" />
                    <View
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_width="5dp"
                        android:layout_height="1dp"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="2"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null" />
                    <Button
                        android:text="查"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="品名"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="条码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="品号"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="品号"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="规格"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="条码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="批号"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="条码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="检验状态"
                        android:textSize="17sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="条码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                </LinearLayout>

                <LinearLayout style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="仓库"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_zj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="请点击选择..."
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="数量"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_bgsl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout style="@style/layout1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="条码"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/et_yj"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="12"
                        android:background="@drawable/editview_border"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="元件条码"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@null"></EditText>

                    <RelativeLayout
                        android:id="@+id/del1dd"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="3dp"
                        android:background="@mipmap/camera"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="clearRFID1"></RelativeLayout>
                </LinearLayout>
                <LinearLayout style="@style/layout1"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="5dp"
                        android:id="@+id/recycler_b_id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@color/button"
            android:gravity="center">

            <Button
                android:id="@+id/btn_submit"
                style="@style/button"
                android:text="提交" />
            <Button
                style="@style/button"
                android:text="取消" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>

