<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mp.theme.dark_blue.background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="钣金入库"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:src="@drawable/fanhui" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bq2"
        style="@style/layout1">

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="12"
            android:background="@drawable/editview_border_input"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:hint="扫描单号"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:text=""
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/del1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@mipmap/ic_delete"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white" />
        <!--
        <RelativeLayout
            android:id="@+id/rl_query"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@mipmap/query"
            android:gravity="center"
            android:clickable="true">
        </RelativeLayout>
        -->
    </LinearLayout>
    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="项  目  号"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_xmh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="工作中心"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_gzzx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="部门"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_bm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:background="@null"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor"
                android:imeOptions="actionDone"
                android:textSize="17sp" />
        </LinearLayout>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/bjrk_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:gravity="center">

        <Button
            android:id="@+id/btn_submit"
            style="@style/button"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/button"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>

