<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mp.theme.dark_blue.background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="容器码打印"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:clickable="true"
            android:src="@drawable/fanhui" />

    </FrameLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/bb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tmsm"
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:text="产品条码"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/et_tm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="15"
                    android:background="@drawable/editview_border"
                    android:ems="10"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:singleLine="true"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <Button
                    android:id="@+id/del1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="3"
                    android:background="@mipmap/camera"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="xiangji"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="产品品号"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_cpph"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="12"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout2"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="产品品名"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_cppm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="12"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="产品规格"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_cpgg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="12"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout style="@style/layout2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="容器类型"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rqlx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="17sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout style="@style/layout1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="标准数量"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_bzsl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10px"
                    android:layout_weight="12"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:gravity="center"
        android:orientation="horizontal"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
       >

        <Button
            android:id="@+id/btn_sc"
            style="@style/button"
            android:text="生成" />

        <Button
            android:id="@+id/btn_qx"
            style="@style/button"
            android:text="取消" />
    </LinearLayout>


</LinearLayout>