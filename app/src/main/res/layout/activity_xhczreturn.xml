<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/mp.theme.dark_blue.background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="退库操作"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:src="@drawable/fanhui" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mp.theme.dark_blue.background"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">



    </LinearLayout>
    <LinearLayout
        android:id="@+id/bq2"
        style="@style/layout1">

        <EditText
            android:id="@+id/et_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="12"
            android:background="@drawable/editview_border_input"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:hint="扫描唛头码"
            android:text=""
            android:textCursorDrawable="@null"></EditText>

        <Button
            android:id="@+id/del1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@mipmap/camera"
            android:clickable="true"
            android:gravity="center"
            android:onClick="xiangji"
            android:textColor="@color/white" />
        <!--
        <RelativeLayout
            android:id="@+id/rl_query"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:background="@mipmap/query"
            android:gravity="center"
            android:clickable="true">
        </RelativeLayout>
        -->
    </LinearLayout>




    <ListView
        android:id="@+id/xhcz_return_list"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/white"
        />


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/button"
        android:gravity="center">

        <Button
            android:id="@+id/btn_submit"
            style="@style/button"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/button"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>