<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_kndb_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_user"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/list_kndb_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_unselect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/layout1"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="企业编号"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/list_kndb_qybh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout1"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="据        点"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/list_kndb_jd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/layout1"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="品        号"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kndb_ph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="仓        库"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kndb_ck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/layout1"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="品        名"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/list_kndb_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="批        次"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/list_kndb_pc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/layout1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="数        量"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/list_kndb_sl_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            style="@style/layout1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="调拨数量"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/list_kndb_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:text=""
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>