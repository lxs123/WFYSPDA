<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_user"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_kndb_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/ic_unselect" />

    <LinearLayout
        android:id="@+id/list_pick_kc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="仓        库"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kc_ck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="库        位"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kc_kw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="批        次"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kndb_pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:text="库存数量"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/list_kndb_sl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/list_kc_flsl_click"
            style="@style/layout1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/list_kc_flsl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:text="调拨数量"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/list_kc_flsl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:text=""
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>