<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_user"
    android:orientation="vertical"
    tools:context=".Activity.Fragment.Cjcz.CjczRightFragment">

    <LinearLayout
        style="@style/layout1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="合并后托码"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/tm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/editview_border"
            android:ems="10"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:singleLine="true"
            android:inputType="text"
            android:descendantFocusability="beforeDescendants"
            android:textCursorDrawable="@null" />


        <ImageView
            android:id="@+id/imgv_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:onClick="xiangji1"
            android:src="@mipmap/camera" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cjcz_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        />

</LinearLayout>